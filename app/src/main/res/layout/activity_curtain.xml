<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/okura_bg_02"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/curtains_up_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/hotel_button">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/okura_arrow" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffffff">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/curtains_stop_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/hotel_button">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/okura_stop" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffffff">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/curtains_down_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/hotel_button">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:rotation="180"
                app:srcCompat="@drawable/okura_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#ffffff">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7">

        <LinearLayout
            android:id="@+id/curtains_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <mji.tapia.com.okurahotel.widget.InternationalTextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/curtain_back_label"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/okura_back_arrow_icon" />
        </LinearLayout>

        <mji.tapia.com.okurahotel.widget.InternationalTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/curtain_lace_label"
            android:textColor="#ffffff"
            android:textSize="32sp" />

    <!--<mji.tapia.com.okurahotel.widget.InternationalTextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginEnd="10dp"
       android:layout_marginTop="10dp"
       android:text="@string/curtain_curtains_label"
       android:textColor="#ffffff"
       android:textSize="32sp" />-->

   <ImageView
       android:id="@+id/imageView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:transitionName="curtains_icon"
       android:layout_marginTop="188dp"
       app:srcCompat="@drawable/okura_curtains_icon" />

   <mji.tapia.com.okurahotel.widget.InternationalTextView
       android:id="@+id/textView6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/imageView5"
       android:transitionName="curtains_label"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="5dp"
       android:text="@string/curtains_title_label"
       android:textColor="#ffffff"
       android:textSize="24sp" />
</RelativeLayout>

<FrameLayout
   android:layout_width="1px"
   android:layout_height="match_parent"
   android:background="#ffffff">

</FrameLayout>

