<?xml version="1.0" encoding="utf-8"?>
<resources name="test" xmlns:tools="http://schemas.android.com/tools">

    <!--Keyword marking
         - #+/{keyword} : add a new keyword group.
         - #or/{keyword} : add a variant of the previous keyword
         - #&/{keyword} : add a new keyword that must be here with the previous keyword group
         - #or/#&/{keyword} : add a new keyword that must be here with the previous variant of the keyword group
         - #+/#<type:id/{keyword} : add a new keyword group that will be followed by a command parameter
         - #+/#type:id>/{keyword} : add a new keyword group that will follow a command parameter
             - type = int|float|string|enum:array_name
    -->

    <string-array name="turn_off_ac" tools:ignore="InconsistentArrays">
        <item >#+/エアコン</item>
        <item >#or/消して</item>
    </string-array>

    <string-array name="turn_on_ac" tools:ignore="InconsistentArrays">
        <item >#+/エアコン</item>
        <item >#or/つけて</item>
    </string-array>

    <string-array name="open_curtain" tools:ignore="InconsistentArrays">
        <item >#+/カーテン</item>
        <item >#or/開けて</item>
        <item >#or/開いて</item>
        <item >#or/オープン</item>
    </string-array>

    <string-array name="close_curtain" tools:ignore="InconsistentArrays">
        <item >#+/カーテン</item>
        <item >#or/閉じて</item>
        <item >#or/閉めて</item>
        <item >#or/クローズ</item>
    </string-array>

    <string-array name="stop_curtain" tools:ignore="InconsistentArrays">
        <item >#+/カーテン</item>
        <item >#or/止とめて</item>
        <item >#or/ストップ</item>
    </string-array>

    <string-array name="turn_on_room" tools:ignore="InconsistentArrays">
        <item >#+/ルーム</item>
        <item >#or/電気</item>
        <item >#or/室内灯</item>
        <item >#+/つけて</item>
    </string-array>

    <string-array name="turn_off_room" tools:ignore="InconsistentArrays">
        <item >#+/ルーム</item>
        <item >#or/電気</item>
        <item >#or/室内灯</item>
        <item >#+/消して</item>
    </string-array>

    <string-array name="turn_on_spot" tools:ignore="InconsistentArrays">
        <item >#+/スポッ</item>
        <item >#or/天井灯</item>
        <item >#+/つけて</item>
    </string-array>

    <string-array name="turn_off_spot" tools:ignore="InconsistentArrays">
        <item >#+/スポット</item>
        <item >#or/天井灯</item>
        <item >#+/消して</item>
    </string-array>

    <string-array name="turn_on_foot" tools:ignore="InconsistentArrays">
        <item >#+/フットライト</item>
        <item >#or/足元灯</item>
        <item >#or/足元</item>
        <item >#+/つけて</item>
    </string-array>

    <string-array name="turn_off_foot" tools:ignore="InconsistentArrays">
        <item >#+/フットライト</item>
        <item >#or/足元灯</item>
        <item >#or/足元</item>
        <item >#+/消して</item>
    </string-array>

    <string-array name="turn_on_all" tools:ignore="InconsistentArrays">
        <item >#+/全部</item>
        <item >#or/すべて</item>
        <item >#or/全て</item>
        <item >#+/つけて</item>
        <item >#+/オン</item>
        <item >#+/ＯＮ</item>
    </string-array>

    <string-array name="turn_off_all" tools:ignore="InconsistentArrays">
        <item >#+/全部</item>
        <item >#or/すべて</item>
        <item >#or/全て</item>
        <item >#+/消して</item>
        <item >#+/オフ</item>
        <item >#+/ＯＦＦ</item>
    </string-array>

    <array name="command_speech_activity">
        <item>@array/turn_on_ac</item>
        <item>@array/turn_off_ac</item>
        <item>@array/open_curtain</item>
        <item>@array/close_curtain</item>
        <item>@array/stop_curtain</item>
        <item>@array/turn_on_room</item>
        <item>@array/turn_off_room</item>
        <item>@array/turn_on_spot</item>
        <item>@array/turn_off_spot</item>
        <item>@array/turn_on_foot</item>
        <item>@array/turn_off_foot</item>
        <item>@array/turn_on_all</item>
        <item>@array/turn_off_all</item>
    </array>
</resources>